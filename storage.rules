rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Generated content - PUBLIC READ and WRITE for testing
    // This allows images to be uploaded and displayed without auth issues
    match /generated-content/{userId}/{allPaths=**} {
      allow read, write: if true; // Public read and write access for generated images
    }
    
    // Users can upload and manage their own artifacts
    match /artifacts/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Brand assets - PUBLIC READ and WRITE for testing
    match /brand-assets/{userId}/{allPaths=**} {
      allow read, write: if true; // Public read and write access for brand logos
    }
    
    // Temporary uploads (for processing)
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}