# Crevo Environment Variables Template
# Copy this file to .env.local and fill in your values

# ===================================
# SITE CONFIGURATION (SEO)
# ===================================
NEXT_PUBLIC_SITE_URL=https://crevo.app
NEXT_PUBLIC_APP_URL=https://crevo.app

# Search Engine Verification Codes
NEXT_PUBLIC_GOOGLE_VERIFICATION=google65e938f40e1298ff
NEXT_PUBLIC_BING_VERIFICATION=your-bing-verification-code
NEXT_PUBLIC_YANDEX_VERIFICATION=your-yandex-verification-code

# ===================================
# SUPABASE
# ===================================
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===================================
# AI SERVICES
# ===================================
# Anthropic (Claude)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Cloud / Vertex AI
GOOGLE_PROJECT_ID=your-google-project-id
GOOGLE_LOCATION=us-central1
VERTEX_AI_ENABLED=true
VERTEX_AI_CREDENTIALS=your-vertex-ai-credentials-json

# OpenAI (Optional)
OPENAI_API_KEY=your-openai-api-key

# OpenRouter Configuration for Website Analysis
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_HTTP_REFERER=http://localhost:3001
OPENROUTER_X_TITLE=Crevo AI Website Analyzer

# ===================================
# STRIPE (PAYMENTS)
# ===================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# ===================================
# SOCIAL MEDIA APIs (Optional)
# ===================================
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# ===================================
# ANALYTICS (Optional)
# ===================================
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# ===================================
# BUILD CONFIGURATION
# ===================================
NEXT_DIST_DIR=.next-alt
